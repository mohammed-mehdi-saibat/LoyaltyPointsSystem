{% extends 'layouts/base.twig' %}

{% block title %}Connexion - ShopEasy
{% endblock %}

{% block content %}
	<div class="checkout-layout">
		<div class="checkout-form-container">
			<h2>Connexion</h2>
			<p class="subtitle">Accédez à votre espace fidélité.</p>

			{% if error %}
				<div class="alert alert-error">{{ error }}</div>
			{% endif %}

			<form action="/FacileAchat/public/login" method="POST" class="checkout-form">
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" id="email" name="email" required>
				</div>

				<div class="form-group">
					<label for="password">Mot de passe</label>
					<input type="password" id="password" name="password" required>
				</div>

				<button type="submit" class="btn btn-primary btn-full">Se connecter</button>
			</form>
			<p style="margin-top: 20px; text-align: center;">
				Nouveau ici ?
				<a href="/FacileAchat/public/register">Créez un compte</a>
			</p>
		</div>
	</div>
{% endblock %}
